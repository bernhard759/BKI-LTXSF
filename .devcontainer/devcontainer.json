{
    "name": "Hephaistos",
    "image": "othawemi/hephaistos:latest-full",
    "workspaceFolder": "/home/latex/data",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/latex/data,type=bind,consistency=cached",
    "mounts": [
        // Mount additional files into the devcontainer, e.g., templates and fonts
        // Examples:
        // "source=${localEnv:HOME}/.local/share/fonts,target=/home/latex/.fonts,type=bind,readonly,consistency=cached",
        // "source=${localEnv:HOME}/texmf,target=/home/latex/texmf,type=bind,readonly,consistency=cached",
    ],
    "postStartCommand": "fc-cache -f && texhash",
    "customizations": {
        "vscode": {
            "extensions": [
                "james-yu.latex-workshop",
                "tecosaur.latex-utilities",
                "ltex-plus.vscode-ltex-plus",
                "streetsidesoftware.code-spell-checker",
                "streetsidesoftware.code-spell-checker-german",
                "yzhang.markdown-all-in-one",
                "shardulm94.trailing-spaces",
                "hediet.vscode-drawio"
            ],
            "settings": {
                "latex-workshop.latex.recipe.default": "lastUsed",
                "latex-workshop.intellisense.citation.backend": "biblatex",
                "latex-workshop.formatting.latex": "latexindent",
                "latex-workshop.latex.tools": [
                    {
                        "name": "latexmk-pdflatex",
                        "command": "latexmk",
                        "args": [
                            "-synctex=1",
                            "-interaction=nonstopmode",
                            "-file-line-error",
                            "-pdf",
                            "-outdir=%OUTDIR%",
                            "%DOC%"
                        ],
                        "env": {}
                    },
                    {
                        "name": "latexmk-pdflatex-shellescape",
                        "command": "latexmk",
                        "args": [
                            "-synctex=1",
                            "-interaction=nonstopmode",
                            "-shell-escape",
                            "-file-line-error",
                            "-pdf",
                            "-outdir=%OUTDIR%",
                            "%DOC%"
                        ],
                        "env": {}
                    },
                    {
                        "name": "latexmk-lualatex",
                        "command": "latexmk",
                        "args": [
                            "-synctex=1",
                            "-interaction=nonstopmode",
                            "-file-line-error",
                            "-lualatex",
                            "-outdir=%OUTDIR%",
                            "%DOC%"
                        ],
                        "env": {}
                    },
                    {
                        "name": "latexmk-lualatex-shellescape",
                        "command": "latexmk",
                        "args": [
                            "-synctex=1",
                            "-interaction=nonstopmode",
                            "-shell-escape",
                            "-file-line-error",
                            "-lualatex",
                            "-outdir=%OUTDIR%",
                            "%DOC%"
                        ],
                        "env": {}
                    },
                    {
                        "name": "latexmk-xelatex",
                        "command": "latexmk",
                        "args": [
                            "-synctex=1",
                            "-interaction=nonstopmode",
                            "-file-line-error",
                            "-xelatex",
                            "-outdir=%OUTDIR%",
                            "%DOC%"
                        ],
                        "env": {}
                    },
                    {
                        "name": "latexmk-xelatex-shellescape",
                        "command": "latexmk",
                        "args": [
                            "-synctex=1",
                            "-interaction=nonstopmode",
                            "-shell-escape",
                            "-file-line-error",
                            "-xelatex",
                            "-outdir=%OUTDIR%",
                            "%DOC%"
                        ],
                        "env": {}
                    },
                    {
                        "name": "latexmk-clean",
                        "command": "latexmk",
                        "args": [
                            "-C",
                            "%DOC%"
                        ],
                        "env": {}
                    },
                    {
                        "name": "pdflatex",
                        "command": "pdflatex",
                        "args": [
                            "-synctex=1",
                            "-interaction=nonstopmode",
                            "-file-line-error",
                            "%DOC%"
                        ],
                        "env": {}
                    },
                    {
                        "name": "bibtex",
                        "command": "bibtex",
                        "args": [
                            "%DOCFILE%"
                        ],
                        "env": {}
                    },
                    {
                        "name": "biber",
                        "command": "biber",
                        "args": [
                            "%DOCFILE%"
                        ]
                    }
                ],
                "latex-workshop.latex.recipes": [
                    {
                        "name": "‚úíÔ∏è latexmk (pdf)",
                        "tools": [
                            "latexmk-pdflatex"
                        ]
                    },
                    {
                        "name": "‚úèÔ∏è latexmk (lua)",
                        "tools": [
                            "latexmk-lualatex"
                        ]
                    },
                    {
                        "name": "‚úíÔ∏è‚öôÔ∏è latexmk (pdf) shell-escape",
                        "tools": [
                            "latexmk-pdflatex-shellescape"
                        ]
                    },
                    {
                        "name": "‚úèÔ∏è‚öôÔ∏è latexmk (lua) shell-escape",
                        "tools": [
                            "latexmk-lualatex-shellescape"
                        ]
                    },
                    {
                        "name": "‚úíÔ∏èüìó pdflatex ‚ûû bibtex ‚ûû pdflatex √ó 2",
                        "tools": [
                            "pdflatex",
                            "bibtex",
                            "pdflatex",
                            "pdflatex"
                        ]
                    },
                    {
                        "name": "‚úíÔ∏èüìò pdflatex ‚ûû biber ‚ûû pdflatex √ó 2",
                        "tools": [
                            "pdflatex",
                            "biber",
                            "pdflatex",
                            "pdflatex"
                        ]
                    },
                    {
                        "name": "üõ†Ô∏è make",
                        "tools": [
                            "make"
                        ]
                    },
                    {
                        "name": "üßπ clean",
                        "tools": [
                            "latexmk-clean"
                        ]
                    }
                ],
                "[search-result]": {
                    "editor.lineNumbers": "on"
                },
                "[tex]": {
                    "editor.wordWrap": "on",
                    "editor.defaultFormatter": "James-Yu.latex-workshop"
                },
                "[latex]": {
                    "editor.wordWrap": "on",
                    "editor.defaultFormatter": "James-Yu.latex-workshop"
                },
                "files.trimTrailingWhitespace": true,
                "git.repositoryScanMaxDepth": -1,
                "git.blame.statusBarItem.enabled": true,
                "telemetry.feedback.enabled": false,
                "docker.lsp.telemetry": "off",
                "telemetry.telemetryLevel": "off",
                "telemetry.enableTelemetry": false,
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash",
                        "icon": "terminal-bash"
                    },
                    "zsh": {
                        "path": "zsh",
                        "icon": "terminal"
                    },
                    "sh": {
                        "path": "sh"
                    }
                },
                "ltex.additionalRules.motherTongue": "de-DE",
                "ltex.additionalRules.enablePickyRules": false,
                "ltex.language": "auto",
                "latex-utilities.message.update.show": false,
                "cSpell.language": "en,de",
                "latex-workshop.view.outline.sections": [
                    "part",
                    "chapter",
                    "section|xsection",
                    "subsection|xsubsection",
                    "subsubsection|xsubsubsection"
                ],
                "latex-workshop.formatting.latexindent.args": [
                    "-c",
                    "%DIR%/",
                    "%TMPFILE%",
                    "-y=defaultIndent: '%INDENT%'",
                    "-l",
                    "/home/latex/.latexindent.yaml"
                ]
            }
        }
    }
}